{
  "root": true,
  "ignorePatterns": [
    "**/*"
  ],
  "plugins": [
    "@nrwl/nx"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx"
      ],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              // {
              //   "sourceTag": "*",
              //   "onlyDependOnLibsWithTags": ["*"]
              // }
              {
                "sourceTag": "application:b-cal",
                "onlyDependOnLibsWithTags": [
                  "application:b-cal",
                  "application:shared"
                ]
              },
              {
                "sourceTag": "application:shared",
                "onlyDependOnLibsWithTags": [
                  "application:shared"
                ]
              },
              // {
              //   "sourceTag": "scope:shared",
              //   "onlyDependOnLibsWithTags": [
              //     "scope:shared"
              //   ]
              // },
              {
                "sourceTag": "type:app",
                "onlyDependOnLibsWithTags": [
                  "type:feature",
                  "type:ui",
                  "type:util"
                ]
              },
              {
                "sourceTag": "type:data-access",
                "onlyDependOnLibsWithTags": [
                  "type:data-access",
                  "type:util",
                  "type:environments"
                ]
              },
              {
                "sourceTag": "type:ui",
                "onlyDependOnLibsWithTags": [
                  "type:ui",
                  "type:util",
                  "type:environments",
                  "type:assets",
                  "type:styles"
                ]
              },
              {
                "sourceTag": "type:util",
                "onlyDependOnLibsWithTags": [
                  "type:util",
                  "type:environments"
                ],
                "bannedExternalImports": [
                  "*angular*"
                ]
              },
              {
                "sourceTag": "type:environments",
                "onlyDependOnLibsWithTags": [
                  "type:environments",
                  "type:util"
                ]
              },
              {
                "sourceTag": "type:assets",
                "onlyDependOnLibsWithTags": [
                  "type:assets"
                ]
              },
              {
                "sourceTag": "type:styles",
                "onlyDependOnLibsWithTags": [
                  "type:styles"
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "extends": [
        "plugin:@nrwl/nx/typescript"
      ],
      "rules": {}
    },
    {
      "files": [
        "*.js",
        "*.jsx"
      ],
      "extends": [
        "plugin:@nrwl/nx/javascript"
      ],
      "rules": {}
    }
  ]
}